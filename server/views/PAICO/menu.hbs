            <img src="/img/logo_ariztia.png" alt="" class="" style="height: 50PX;">
          </div>
        </div>
      </div>

      {{!-- MODAL DE GRAFICO  --}}
      {{#if GRAFICO}}

          <div class="alto bg-info" id="modalgrafico">
            <div class="relato" id="relato">
