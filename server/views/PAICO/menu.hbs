                <option class="text-monospace" value="{{ N_OF }}">{{ N_OF }}</option>
              {{/if}}
            {{/each}}
          {{/each}}
        </select>
        <input type="hidden" name="OPERARIO" value="{{OPERARIO}}">
        <input type="hidden" name="codigo" id="codigo" value="{{codigo}}">
