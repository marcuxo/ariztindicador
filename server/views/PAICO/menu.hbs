        </form>
       </div>
       <div class="col-12 col-md-6 pt-5">
         <div class="row">
           <div class="col-12 col-md-12">
              <a href="./" class="btn btn-danger btn-sm " onclick=""><i class="fas fa-exchange-alt fa-3x"></i></a><br>
              <label for="">CAMBIAR EQUIPO</label>
           </div>
           <div class="col-6 col-md-12 invisible">
            <form action="/paico/uploadinyeccion" method="post">
              <button class="btn btn-primary btn-sm " onclick=""><i class="fas fa-file-upload fa-3x"></i></button><br>
              <label for="">ARCHIVOS INYECCION</label>
              <input type="hidden" name="OPERARIO" value="{{OPERARIO}}">
            </form>
           </div>
         </div>
          
          
       </div>
      </div>
    </div>
    
  </div>
</div>
</div>


